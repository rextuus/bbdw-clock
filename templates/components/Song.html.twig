<div{{ attributes }} class="card shadow-lg p-3 mb-5 bg-body rounded" style="width: 50rem;">
    <div class="card-body">
        <h5 class="card-title text-primary mb-2">{{ song.name }}</h5>
        <div class="row">
            <twig:Albums song="{{ song }}" />
        </div>
        <div class="row">
            <div class="col-md-6">
                <h6 class="card-subtitle mb-2 text-muted">Text:</h6>
                <ul class="list-group list-group-flush">
                    {% for texter in this.texter %}
                        <li class="list-group-item">
                            <i class="fa-regular fa-bat"></i>
                            {% if texter.name.value != 'Andy' %}
                                {{ texter.name.value }}
                            {% else %}
                                {{ texter.noGodName }}
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-6">
                <h6 class="card-subtitle mb-2 text-muted">Musik:</h6>
                <ul class="list-group list-group-flush">
                    {% for composer in this.composers %}
                        <li class="list-group-item">
                            {% if composer.name.value != 'Andy' %}
                                {{ composer.name.value }}
                            {% else %}
                                {{ composer.noGodName }}
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>