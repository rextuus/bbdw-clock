{# templates/text/add_text.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-3" style="max-width: 320px;">
        <h1 class="h5">Add Text</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">{{ message }}</div>
        {% endfor %}

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.text, 'Your Text', {'label_attr': {'class': 'form-label mt-3'}}) }}
            {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mt-3">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            max-width: 320px; /* Optimized for small screens like 3.5" displays */
        }
    </style>
{% endblock %}